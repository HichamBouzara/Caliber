append content
  .breadcrumb-holder
    .container-fluid
      ul.breadcrumb
        li.breadcrumb-item
          a(href='index.html') Home
        li.breadcrumb-item.active Abonnements 
  section
    .container-fluid
      // Page Header
      header
        .row
          .col-md-6
            h1.h3.display.m-3 ABBONEMENTS
          .col-md-6.text-right
            a.btn.btn-primary.btn-lg(href='#', data-toggle='modal', data-target='#nouveau_abonnement_modal')
              | Nouveau Abonnement
              br
      .row
        .col-lg-12
          .card
            .card-header
              h4 Striped Table
            .card-body
              .table-responsive
                table.table.table-striped
                  thead
                    tr
                      th #
                      th First Name
                      th Last Name
                      th Username
                  tbody
                    tr
                      th(scope='row') 1
                      td Mark
                      td Otto
                      td @mdo
                    tr
                      th(scope='row') 2
                      td Jacob
                      td Thornton
                      td @fat
                    tr
                      th(scope='row') 3
                      td Larry
                      td the Bird
                      td @twitter 
  #nouveau_abonnement_modal.modal.fade.text-left(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true')
    .modal-dialog.modal-lg(role='document')
      .modal-content
        .modal-header
          h5#exampleModalLabel.modal-title Nouveau Abonnement
          button.close(type='button', data-dismiss='modal', aria-label='Close')
            span(aria-hidden='true') ×
        .modal-body
          form
            div
              .container
                .row.p-0
                  .col-md-12.p-0
                    .card
                      .card-header.bg-light
                        | Information abonnement
                        br
                      .card-body
                        .form-row
                          .form-group.col-md-2
                            label Nombre de mois
                            input.form-control(type='text', placeholder='Prénom', required='required')
                          .form-group.col-md-10
                            label(contenteditable='true') Tarif par mois
                            input.form-control(type='text', required='required', placeholder='Sexe')
                          .form-group.col-md-4
                            label(contenteditable='true') Date de début
                            input.form-control(type='date', placeholder='Email Address', required='required')
            div
              .container
                .row
                  .col-md-12.p-0(style='')
                    .card
                      .card-header.bg-light
                        | Total à payer
                        br
                      .card-body.text-center
                        h3.display-4 1000 DA
            .form-group.mx-2
              input.btn.btn-primary.btn-lg.form-control-lg(type='submit', value='Valider')
        .modal-footer
          button.btn.btn-secondary(type='button', data-dismiss='modal') Annuler

append scripts
  include ./abonnements.js