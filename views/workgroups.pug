doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css', type='text/css')
    link(rel='stylesheet', href='https://static.pingendo.com/bootstrap/bootstrap-4.1.3.css')
  body
    nav.navbar.bg-primary.navbar-dark
      .container
        a.navbar-brand(href='#')
          i.fa.d-inline.fa-lg.fa-circle
          b  TASKILI
    .py-3(style='')
      .container
        .row
          .col-md-12
            h1 Workgroups
        .row
          .col-md-12.text-right.py-2
            a.btn.btn-primary.w-50.btn-lg(href='#', data-toggle='modal', data-target='#createWorkgroupModal') New Workgroup
        .row
          .col-md-12
            ul.list-group
              each w in args.workgroups
                a(href='/workgroups/'+w._id)
                  li.list-group-item.d-flex.justify-content-between.align-items-center.my-1= w.title
                    span.badge.badge-primary.badge-pill=args.workgroups.tasks
    #createWorkgroupModal.modal
      .modal-dialog(role='document')
        .modal-content
          .modal-header
            h5.modal-title Create Workgroup
            button.close(type='button', data-dismiss='modal')
              span Ã—
          .modal-body.p-3
            .row
              .col-md-12(style='')
                .row
                  .form-group.w-100
                    label(for='form16', style='') Title
                    input#workgroupTitle.form-control.text-primary(type='text', placeholder='Title')
                .row
                  .form-group.w-100
                    label(for='form16', style='') Challenge
                    input#challengeTitle.form-control.text-primary(type='text', placeholder='Challenge')
          .modal-footer
            button#createWorkgroup.btn.btn-primary(type='button') Create
            button.btn.btn-secondary(type='button', data-dismiss='modal') Close
      
    script(src='https://code.jquery.com/jquery-3.3.1.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js', integrity='sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49', crossorigin='anonymous')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js', integrity='sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy', crossorigin='anonymous')
    script(src='/js/workgroups.js')